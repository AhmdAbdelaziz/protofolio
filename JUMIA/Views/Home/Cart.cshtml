@model List<Cart>


    <table class="table table-hover">
        <tr>
        <th>اسم المنتج</th>
        <th>الكمية</th>
        <th>السعر</th>
        
        <th>اجمالي السعر</th>
        <th>الصورة</th>
        </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Qty</td>
            <td>@item.Product.Price</td>
            <td>@(item.Qty*item.Product.Price)</td>
            <td><a href="/home/currentproduct/@item.ProductId"><img src="https://localhost:62166/upload/@item.Product.Photo" width="100" /></a></td>
        </tr>
    }

    </table>


<div class="container" >





    <a style="
    background-color: white;
    color: black;
    border: 2px solid green;
    padding: 10px 20px;
    text-align: center;
    " href="/home/buyer">I am Done</a>
    </div>
